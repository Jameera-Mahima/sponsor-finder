# OpenAI API Configuration (Primary)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# OpenAI Model Configuration
# Fast model for quick tasks (keyword extraction, categorization, etc.)
OPENAI_MODEL_FAST=gpt-4o-mini

# Quality model for complex tasks (validation, orchestration, etc.)
OPENAI_MODEL_QUALITY=gpt-4o

# Enable OpenAI as primary LLM provider
USE_OPENAI=true

# Claude API Configuration (Fallback)
# Get your API key from: https://console.anthropic.com/
# Optional but recommended for reliability - system will automatically fallback to Claude if OpenAI fails
ANTHROPIC_API_KEY=your-anthropic-api-key-here
USE_CLAUDE_FALLBACK=true

# Cost Monitoring & Alerts
# Alert threshold: campaign will trigger warning if costs exceed this amount (in USD)
COST_ALERT_THRESHOLD=5.00

# Enable detailed cost tracking per agent
LOG_COSTS_PER_AGENT=true

# Salesforce CRM Integration
# Get credentials from: https://login.salesforce.com
SALESFORCE_USERNAME=your-email@csoafmail.org
SALESFORCE_PASSWORD=your-salesforce-password
SALESFORCE_SECURITY_TOKEN=your-security-token
SALESFORCE_DOMAIN=login  # Use 'test' for sandbox, 'login' for production

# Salesforce Object Settings
SALESFORCE_OBJECT_TYPE=Lead  # Use 'Lead' for prospects, 'Account' for organizations
SALESFORCE_LEAD_SOURCE=AI Sponsor Search  # Default lead source for tracking

# Campaign Association (optional)
SALESFORCE_CAMPAIGN_NAME=Sponsor Research

# Email Campaign Settings
# Configuration for automated email outreach via Salesforce API
EMAIL_FROM_NAME=Community School of the Arts Foundation
EMAIL_FROM_ADDRESS=development@csoaf.org
EMAIL_REPLY_TO=jameera@csoafmail.org

# Campaign Tracking & Reporting
ENGAGEMENT_TRACKING_ENABLED=true
ENGAGEMENT_REPORT_PATH=docs/engagement_report.md
HOT_LEADS_EXPORT_PATH=docs/hot_leads.json
